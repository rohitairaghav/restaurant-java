<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Add SKU field to stock_transactions table -->
    <changeSet id="7" author="system" context="dev,staging,prod">
        <comment>Add SKU field to stock_transactions table for product tracking</comment>
        <addColumn tableName="stock_transactions">
            <column name="sku" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="stock_transactions" columnName="sku"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
