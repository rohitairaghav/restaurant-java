{
  "name": "restaurant-inventory",
  "version": "1.0.0",
  "description": "Restaurant Inventory Management System",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npx expo start",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && npx expo build",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "type-check": "tsc --noEmit",
    "db:setup": "cd supabase/liquibase && liquibase --version && echo 'Liquibase setup validated'",
    "db:status": "cd supabase/liquibase && liquibase status --changelog-file=changelogs/db.changelog-master.xml",
    "db:update": "cd supabase/liquibase && liquibase update --changelog-file=changelogs/db.changelog-master.xml",
    "db:rollback": "cd supabase/liquibase && liquibase rollback-count 1 --changelog-file=changelogs/db.changelog-master.xml",
    "db:validate": "cd supabase/liquibase && liquibase validate --changelog-file=changelogs/db.changelog-master.xml",
    "db:history": "cd supabase/liquibase && liquibase history --changelog-file=changelogs/db.changelog-master.xml"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.4",
    "zod": "^3.25.76"
  }
}
